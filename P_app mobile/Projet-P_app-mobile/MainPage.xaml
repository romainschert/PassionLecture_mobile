<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet_P_app_mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Entry x:Name="endpoint" WidthRequest="300"
                   Text="http://10.0.2.2:3000/epub/1"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />

            <HorizontalStackLayout>
                <Label Text="XML"/>
                <Switch Toggled="Switch_Toggled" IsToggled="False"/>
            </HorizontalStackLayout>

            <Button Text="Load data" Clicked="Button_Clicked"/>

            <Label x:Name="title" Text="book title"/>
            <Image x:Name="cover" WidthRequest="150" HeightRequest="150" Source="book.png" />

            <Label Text="Qui pourrait vous intéresser ?" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,10"/>
            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button BackgroundColor="LightGray"
                    WidthRequest="165" HeightRequest="200"
                    CornerRadius="10" Margin="5"
                    Command="{Binding BindingContext.NavigateToDetailCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="plus" 
                    Clicked="OnLoadMoreClicked"
                    HorizontalOptions="Center" 
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="10"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
