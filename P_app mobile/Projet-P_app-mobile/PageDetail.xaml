<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet_P_app_mobile.PageDetail">

    <ScrollView>
		<ScrollView>
			<StackLayout Padding="20" Spacing="20">

				<!-- Top Bar -->
				<Grid ColumnDefinitions="*,Auto" VerticalOptions="Start">
					<Button Text="logo"
							BackgroundColor="#D3D3D3"
							TextColor="Black"
							Padding="10,5"
							HorizontalOptions="Start"
							CornerRadius="5"/>
					<BoxView Color="#D3D3D3"
							 HeightRequest="30"
							 WidthRequest="30"
							 CornerRadius="15"
							 HorizontalOptions="End"/>
				</Grid>

				<!-- Couverture -->
				<Frame BackgroundColor="#D3D3D3"
					   HeightRequest="300"
					   CornerRadius="5"
					   HasShadow="False"
					   HorizontalOptions="FillAndExpand"
					   VerticalOptions="Center">
					<Label Text="page de couverture"
						   HorizontalOptions="Center"
						   VerticalOptions="Center"/>
				</Frame>

				<!-- Titre et description -->
				<Label Text="titre"
					   FontAttributes="Bold"
					   FontSize="Medium"
					   HorizontalOptions="Center"/>
				<Label Text="description du livre"
					   FontSize="Small"
					   HorizontalOptions="Center"/>

				<!-- Tag -->
				<Frame BackgroundColor="#D3D3D3"
					   CornerRadius="15"
					   Padding="10"
					   HorizontalOptions="Center"
					   HasShadow="False">
					<Label Text="tag"
						   HorizontalOptions="Center"
						   VerticalOptions="Center"/>
				</Frame>

				<!-- Nombre de pages et Date -->
				<Grid ColumnDefinitions="*,*"
					  ColumnSpacing="20">
					<Frame BackgroundColor="#D3D3D3"
						   CornerRadius="10"
						   Padding="10"
						   HasShadow="False">
						<StackLayout>
							<Label Text="Nombre de page" FontSize="Small"/>
							<Label Text="679" FontSize="Medium"/>
						</StackLayout>
					</Frame>

					<Frame BackgroundColor="#D3D3D3"
						   CornerRadius="10"
						   Padding="10"
						   HasShadow="False">
						<StackLayout>
							<Label Text="date de publication" FontSize="Small"/>
							<Label Text="19/10/2000" FontSize="Medium"/>
						</StackLayout>
					</Frame>
				</Grid>

				<!-- Bouton Lire -->
				<Button Text="lire"
						BackgroundColor="#D3D3D3"
						TextColor="Black"
						CornerRadius="20"
						HeightRequest="40"
						HorizontalOptions="Center"
						WidthRequest="120"/>

			</StackLayout>
		</ScrollView>
	</ScrollView>

</ContentPage>
